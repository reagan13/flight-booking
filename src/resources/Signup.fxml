<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="application.controller.SignupController" styleClass="auth-background">
   <stylesheets>
      <URL value="@auth.css" />
   </stylesheets>
   
   <center>
      <VBox alignment="CENTER" spacing="10" maxWidth="350" styleClass="auth-container">
         <padding>
            <Insets top="25" right="30" bottom="25" left="30" />
         </padding>
         
         <Label text="Create Account" styleClass="auth-title">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         
         <Separator />
         
         <HBox spacing="10">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label text="First Name" styleClass="auth-label"/>
               <TextField fx:id="firstNameField" promptText="First name" styleClass="auth-field"/>
            </VBox>
            
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label text="Last Name" styleClass="auth-label"/>
               <TextField fx:id="lastNameField" promptText="Last name" styleClass="auth-field"/>
            </VBox>
         </HBox>
         
         <Label text="Email" styleClass="auth-label"/>
         <TextField fx:id="emailField" promptText="Enter your email" styleClass="auth-field"/>
         
         <Label text="Age" styleClass="auth-label"/>
         <TextField fx:id="ageField" promptText="Enter your age" styleClass="auth-field"/>
         
         <Label text="Address" styleClass="auth-label"/>
         <TextField fx:id="addressField" promptText="Enter your address" styleClass="auth-field"/>
         
         <Label text="Password" styleClass="auth-label"/>
         <PasswordField fx:id="passwordField" promptText="Create a password" styleClass="auth-field"/>
         
         <Label text="Confirm Password" styleClass="auth-label"/>
         <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" styleClass="auth-field"/>
         
         <Label fx:id="errorLabel" styleClass="auth-error" visible="false" managed="false" />
         
         <Button fx:id="signupButton" text="Sign Up" onAction="#handleSignup" styleClass="auth-button" maxWidth="Infinity" />
         
         <HBox alignment="CENTER" spacing="5" styleClass="auth-link-box">
            <Label text="Already have an account?" />
            <Hyperlink fx:id="loginLink" text="Login" onAction="#switchToLogin" styleClass="auth-hyperlink"/>
         </HBox>
      </VBox>
   </center>
</BorderPane>