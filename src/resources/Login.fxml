<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="application.controller.LoginController" styleClass="auth-background">
   <stylesheets>
      <URL value="@auth.css" />
   </stylesheets>
   
   <center>
      <VBox alignment="CENTER" spacing="15" maxWidth="350" maxHeight="450" styleClass="auth-container">
         <padding>
            <Insets top="30" right="30" bottom="30" left="30" />
         </padding>
         
         <Label text="JetSetGO" styleClass="auth-title">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         
         <Label text="Welcome Back!" styleClass="auth-label">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         
         <Separator />
         
         <Label text="Email" styleClass="auth-label"/>
         <TextField fx:id="emailField" promptText="Enter your email" styleClass="auth-field"/>
         
         <Label text="Password" styleClass="auth-label"/>
         <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="auth-field"/>
         
         <Label fx:id="errorLabel" styleClass="auth-error" visible="false" managed="false" />
         
         <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="auth-button" maxWidth="Infinity" />
         
         <HBox alignment="CENTER" spacing="5" styleClass="auth-link-box">
            <Label text="Don't have an account?" />
            <Hyperlink fx:id="signupLink" text="Sign up" onAction="#switchToSignup" styleClass="auth-hyperlink"/>
         </HBox>
      </VBox>
   </center>
</BorderPane>