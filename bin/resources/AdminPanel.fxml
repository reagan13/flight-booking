<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.AdminController">
   <top>
      <!-- Header Section -->
      <VBox styleClass="header" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
         <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="JetSetGO Admin Panel" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="adminNameLabel" text="Welcome, Admin" textFill="#ecf0f1">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" />
         </HBox>
      </VBox>
   </top>
   
   <left>
      <!-- Navigation Sidebar -->
      <VBox prefWidth="250" style="-fx-background-color: #34495e; -fx-padding: 0;">
         <VBox spacing="5" style="-fx-padding: 20;">
            <Label text="Navigation" textFill="#bdc3c7" style="-fx-font-weight: bold; -fx-font-size: 16;" />
            <Separator style="-fx-background-color: #7f8c8d;" />
            
            <Button fx:id="dashboardBtn" onAction="#showDashboard" text="ðŸ“Š Dashboard" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15; -fx-cursor: hand; -fx-font-size: 14;"
                    prefWidth="200" />
            
            <Button fx:id="usersBtn" onAction="#showUsers" text="ðŸ‘¥ Manage Users" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15; -fx-cursor: hand; -fx-font-size: 14;"
                    prefWidth="200" />
            
            <Button fx:id="flightsBtn" onAction="#showFlights" text="âœˆï¸ Manage Flights" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15; -fx-cursor: hand; -fx-font-size: 14;"
                    prefWidth="200" />
            
            <Button fx:id="bookingsBtn" onAction="#showBookings" text="ðŸŽ« View Bookings" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15; -fx-cursor: hand; -fx-font-size: 14;"
                    prefWidth="200" />
            
            <Button fx:id="reportsBtn" onAction="#showReports" text="ðŸ“ˆ Reports" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15; -fx-cursor: hand; -fx-font-size: 14;"
                    prefWidth="200" />
         </VBox>
      </VBox>
   </left>
   
   <center>
      <!-- Main Content Area -->
      <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1; -fx-padding: 30;">
         
         <!-- Dashboard Content (Default) -->
         <VBox fx:id="dashboardContent" spacing="20" alignment="TOP_CENTER">
            <Label text="Admin Dashboard" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            
            <!-- Statistics Cards -->
            <HBox spacing="30" alignment="CENTER">
               <!-- Total Users Card -->
               <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                  <Label text="Total Users" style="-fx-font-size: 16; -fx-text-fill: #7f8c8d;" />
                  <Label fx:id="totalUsersLabel" text="0" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #3498db;" />
               </VBox>
               
               <!-- Total Flights Card -->
               <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                  <Label text="Total Flights" style="-fx-font-size: 16; -fx-text-fill: #7f8c8d;" />
                  <Label fx:id="totalFlightsLabel" text="0" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #e67e22;" />
               </VBox>
               
               <!-- Total Bookings Card -->
               <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                  <Label text="Total Bookings" style="-fx-font-size: 16; -fx-text-fill: #7f8c8d;" />
                  <Label fx:id="totalBookingsLabel" text="0" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
               </VBox>
            </HBox>
            
            <!-- Quick Actions -->
            <VBox alignment="CENTER" spacing="15">
               <Label text="Quick Actions" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               <HBox spacing="20" alignment="CENTER">
                  <Button onAction="#addNewFlight" text="Add New Flight" 
                          style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 15 25; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14;" />
                  <Button onAction="#viewAllUsers" text="View All Users" 
                          style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-padding: 15 25; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14;" />
                  <Button onAction="#generateReport" text="Generate Report" 
                          style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-padding: 15 25; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14;" />
               </HBox>
            </VBox>
         </VBox>
         
         <!-- Other content sections will be added here -->
         <VBox fx:id="usersContent" spacing="20" visible="false">
            <Label text="Users Management" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TableView fx:id="usersTable" style="-fx-background-color: white; -fx-background-radius: 10;">
            </TableView>
         </VBox>
         
         <VBox fx:id="flightsContent" spacing="20" visible="false">
            <Label text="Flights Management" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TableView fx:id="flightsTable" style="-fx-background-color: white; -fx-background-radius: 10;">
            </TableView>
         </VBox>
         
         <VBox fx:id="bookingsContent" spacing="20" visible="false">
            <Label text="Bookings Overview" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TableView fx:id="bookingsTable" style="-fx-background-color: white; -fx-background-radius: 10;">
            </TableView>
         </VBox>
         
         <VBox fx:id="reportsContent" spacing="20" visible="false">
            <Label text="Reports and Analytics" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Label text="Reports functionality coming soon..." style="-fx-font-size: 16; -fx-text-fill: #7f8c8d;" />
         </VBox>
         
      </StackPane>
   </center>
</BorderPane>